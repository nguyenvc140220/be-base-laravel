{
    "openapi": "3.0.0",
    "info": {
        "title": "Base Laravel API",
        "version": "1.0"
    },
    "servers": [
        {
            "url": "http://localhost:8001/api/v1/"
        }
    ],
    "paths": {
        "/api/v1": {},
        "/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Login",
                "operationId": "login",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "$ref": "#/components/responses/bad_request_response"
                    },
                    "401": {
                        "$ref": "#/components/responses/unauthorized_response"
                    },
                    "200": {
                        "$ref": "#/components/responses/login_success_response"
                    }
                }
            }
        },
        "/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Logout",
                "operationId": "logout",
                "responses": {
                    "400": {
                        "$ref": "#/components/responses/bad_request_response"
                    },
                    "401": {
                        "$ref": "#/components/responses/unauthorized_response"
                    },
                    "200": {
                        "$ref": "#/components/responses/logout_success_response"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/refresh-token": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Refresh Token",
                "operationId": "refreshToken",
                "responses": {
                    "400": {
                        "$ref": "#/components/responses/bad_request_response"
                    },
                    "401": {
                        "$ref": "#/components/responses/unauthorized_response"
                    },
                    "200": {
                        "$ref": "#/components/responses/login_success_response"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "ErrorResponseException": {
                "properties": {
                    "error": {
                        "type": "string",
                        "example": "Bad Request"
                    }
                },
                "type": "object"
            },
            "LoginRequest": {
                "title": "Login Request",
                "required": [
                    "email",
                    "password"
                ],
                "properties": {
                    "email": {
                        "description": "Email",
                        "type": "string",
                        "format": "email",
                        "example": "test@example.com"
                    },
                    "password": {
                        "description": "Password",
                        "type": "string",
                        "format": "password",
                        "example": "password"
                    }
                },
                "type": "object"
            },
            "AuthResource": {
                "properties": {
                    "accept_token": {
                        "type": "string",
                        "example": "eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9.eyJzdWIiOiI1ZjIwZjQwZjQwZjQwZjQwZjQwZjQwZjQiLCJpYXQiOjE1OTYwNzQwNzYsImV4cCI6MTU5NjA3NzY3Nn0.7"
                    }
                },
                "type": "object"
            }
        },
        "responses": {
            "bad_request_response": {
                "description": "Bad Request",
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "example": "Bad Request"
                                },
                                "data": {
                                    "type": "object"
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            },
            "unauthorized_response": {
                "description": "Unauthorized",
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "example": "Unauthorized"
                                },
                                "data": {
                                    "type": "object"
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            },
            "login_success_response": {
                "description": "successful operation",
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "data": {
                                    "$ref": "#/components/schemas/AuthResource"
                                },
                                "message": {
                                    "type": "string",
                                    "example": "ok"
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            },
            "logout_success_response": {
                "description": "successful operation",
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "data": {
                                    "type": "boolean",
                                    "example": true
                                },
                                "message": {
                                    "type": "string",
                                    "example": "ok"
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Auth",
            "description": "Authentication"
        }
    ]
}